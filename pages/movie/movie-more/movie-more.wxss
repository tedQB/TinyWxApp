
@import "/pages/movie/movie-detail/movie-detail.wxss";

.session-movie {
  background: #fff;
  border-width: 1px 0px 0px 0px;
  border-style: solid;
  border-color: #e6e6e6;
}

.session-movie-spacing {
  margin-top: 84rpx;
}

.session-content-spacing {
  padding: 0rpx 30rpx 0rpx 30rpx;
  margin-top: 0rpx;
  box-sizing: border-box;
}

.session-tab {
  width: 100%;
  display: flex;
  position: fixed;
  background: #fff;
  z-index: 1;
}

.session-tab-spacing {
  border-width: 1px 0px 1px 0px;
  border-style: solid;
  border-color: #e6e6e6;
}

.tab-name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
}

.tab-selected {
  color: #32cd32;
  border-bottom: 2px solid #32cd32;
}

.tab-normal {
  color: #9e9e9e;
}

.scroll-movie {
  height:100vh;
}
