
.container{
    flex:1;
    background:#fff
}

.session-rating{
    display:flex;
    flex-direction: column;
    align-items: center;
    background:#fff;
}

.rating{
    height: 100rpx;
    text-align: center;
    align-self: center;
    margin:30rpx 0rpx 30rpx 0rpx;
}

.rating-desc {
    display: flex;
    flex-direction: row;
}
.desc-text{
    width:32px;
    height: 22px;
    font-size: 15px;
    line-height: 22px;
    text-align: center;
    color:#9e9e9e;
    opacity: 0;
}
.desc-text-show{
    opacity: 1;
}

.rating-star {
  content: "";
  display: block;
  width: 110px;
  height: 22px;
  position: absolute;
  background-repeat: no-repeat;
}
.rating-stars-wrapper {
  display: flex;
  flex-direction: row;
}
.rating-stars-wrapper image{
    margin:0 10rpx; 
}
.rating-dec text{
    margin:0 10rpx; 
}
.star {
  width: 32px;
  height: 32px;
  background-image: url('https://img3.doubanio.com/f/talion/0eb3a627a2c8679d6a90aa5f567566b2ad659c9e/pics/card/ic_star_n.png');
  background-size:100% 100%
}
.star-HL {
  width: 32px;
  height: 32px;
  background-image: url('https://img3.doubanio.com/f/talion/4e91b1ae895cdfb37d69f5c2eea33ecd2ab789e6/pics/card/ic_star_y.png');
background-size:100% 100%
}
.session-textarea {
  display: flex;
  width: 100%;
  white-space: nowrap;
}
.rating-textarea {
  display: block;
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #4a4a4a;
  margin: 30rpx 30rpx 30rpx 30rpx;
  padding: 20rpx;
  border: 1px solid #e6e6e6;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.confirm {
  margin: 0rpx 30rpx 0rpx 30rpx;
}
